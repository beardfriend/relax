{
  "env": {
    "node": true
  },
  "extends": ["airbnb-base", "airbnb-typescript/base", "../../.eslintrc"],
  "parserOptions": {
    "project": "**/tsconfig.json"
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "class-methods-use-this": "off"
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "project": "**/tsconfig.json"
      }
    }
  }
}
